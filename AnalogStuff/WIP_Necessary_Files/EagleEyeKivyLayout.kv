<FirstWindow>:
    name: "first"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1, 0.1
            orientation: 'horizontal'
            AnchorLayout:
                anchor_x: 'left'
                Image:
                    size_hint: 0.5, 1
                    source: "Images/ClearBackgroundLogo.png"
            AnchorLayout:
                anchor_x: 'right'
                Button:
                    background_color: 1, 1, 1, 0
                    size_hint: 0.1, 1
                    on_release: root.openSettings()
                    Image:
                        size_hint: None, None
                        size: 60, 60
                        source: "Images/settings_cog.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y                        

        BoxLayout:
            id: graphArea
            size_hint: 1, 0.9
            
        BoxLayout:
            id: controlArea
            size_hint: 1, 0.1

            AnchorLayout:
                # orientation: "vertical"
                anchor_x: 'left'
                Label:
                    text: "Room 1"
                    size_hint: 0.3, 1
                    font_size: 30
                    color: 'black'
            AnchorLayout:
                anchor_x: 'center'    
                Button:
                    text: "Change Room"
                    font_size: 25
                    background_normal: ''
                    background_color: 0, 0.4, 0.73, 1
                    size_hint: 1, 1
                    on_release:
                        root.changeScreens()
                        app.root.current = "second"
                        root.manager.transition.direction = "left"
            AnchorLayout:
                anchor_x: 'right'    
                BoxLayout:
                    size_hint: 0.3, 1
                    orientation: "vertical"
                    Button:
                        text: "Fisheye"
                        font_size: 20
                        background_normal: ''
                        background_color: 0, 0.4, 0.73, 1
                        # size_hint: 0.2, 1
                        on_release:
                            root.toggleImage(1)
                    Button:
                        text: "Non-Fisheye"
                        font_size: 20
                        background_normal: ''
                        background_color: 0, 0.4, 0.73, 1
                        # size_hint: 0.2, 1
                        on_release:
                            root.toggleImage(2)
                    Button:
                        text: "Image Off"
                        font_size: 20
                        # size_hint: 0.2, 1
                        background_normal: ''
                        background_color: 0, 0.4, 0.73, 1
                        on_release:
                            root.toggleImage(0)



